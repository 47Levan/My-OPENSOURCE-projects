
@model OnlineShop.Models.Product
<table>

   <tr>
       <td>
           Name of product:@Model.Name
       </td>
       <td rowspan="4">
           <img style="width:auto;height:auto" src='@Url.Action("ShowPicture","FileOper",new {ImageDataId=@Model.Id})' />
       </td>
   </tr>
    <tr>
        <td>
            Article of product:@Model.Article
        </td>
    </tr>
    <tr>
        <td>
            Price of product:@Model.Price $
        </td>
    </tr>
    <tr>
        <td>
            Description:@Model.Description $
        </td>
    </tr> 
</table>