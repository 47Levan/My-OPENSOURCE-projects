@model OnlineShop.Models.OnlineShopDatabase.OnlineShopDbContext
@using OnlineShop.Models.OnlineShopDatabase.Goods;
@using System.Data.Entity;
<link type="text/css" rel="stylesheet" href="~/Content/CategoryList.css?Wednesday 20th of July 2016 07:45:21 AM"/>
   @* <script src="~/Scripts/ResizeButton.js" type="text/javascript"></script>*@ 

<div id="CatContainer">
    <img src="http://www.clker.com/cliparts/7/6/4/a/1206569902228245216pitr_green_single_arrows_set_1.svg.hi.png" />
    <ul id="mainMenu">
        @foreach (Category cat in Model.Categories)
        {
            <li>

                <div class="MenuItem">
                    <span class="tooltip" data-tooltip="I'm small tooltip. Don't kill me!">Hover me!</span>
                    <img src="@cat.PictureRef"/>
                </div>

                <ul class="subMenu">
                    @foreach (SubCategory subcat in Model.SubCategories.Where(x => x.Category.Id == cat.Id))
                    {

                        <li>
                            <div class="subMenuItem">
                                <button style="display:none" value="@subcat.Id"></button>
                                <span class="tooltip" data-tooltip="@subcat.Id">Hover me!</span>
                                <img src="@subcat.PictureRef"/>
                            </div>

                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>




