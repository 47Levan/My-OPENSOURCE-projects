<script src="~/Scripts/jquery-3.1.0.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui-1.11.4.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.form.min.js"  type="text/javascript" ></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/Scripts/showUserProfile.js"  type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="~/Content/ValidationStyle.css" />
@model OnlineShop.Models.Authentication.SignUp
@using (Html.BeginForm("ChangeProfile", "Auth", new { }, FormMethod.Post, new { id="EditProfile",enctype = "multipart/form-data" }))
{
    <p>User name:</p>
        @Html.TextBoxFor(x=>x.Id,new {@style="display:none" });
        @Html.TextBoxFor(x => x.UserName, new { Class = "EnterProductInfoField" })
        @Html.ValidationMessageFor(x => x.UserName)
        <p>Email:</p>
        @Html.EditorFor(x => x.EmailAdress, new { Class = "EnterProductInfoField", @type = "email" })
        @Html.ValidationMessageFor(x => x.EmailAdress)
        <p>Password:</p>
        @Html.PasswordFor(x => x.Password, new { Class = "EnterProductInfoField" })
        @Html.ValidationMessageFor(x => x.Password)
        <p>First name:</p>
        @Html.TextBoxFor(x => x.FirstName, new { Class = "EnterProductInfoField" })
        <p>Second name:</p>
        @Html.TextBoxFor(x => x.SecondName, new { Class = "EnterProductInfoField" })
        <p>Age:</p>
        @Html.TextBoxFor(x => x.Age, new { Class = "EnterProductInfoField", @type = "number" })
        <p>Country:</p>
        @Html.TextBoxFor(x => x.Country, new { Class = "EnterProductInfoField" })
        <p>Phone number:</p>
        @Html.TextBoxFor(x => x.PhoneNumber, new { Class = "EnterProductInfoField" })
        <p>Upload your photo:</p>
        <input type="file"  name="uploadedImage" />
        <br />
        <br />
        <input type="submit" value="Edit profile" id="submitEditProfile" class="DataOperations" style="left:0px" />
}
