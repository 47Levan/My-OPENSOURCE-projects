@*@using OnlineShop.Models.Authentication;*@
@model OnlineShop.Models.OnlineShopDatabase.Authentication.SignUp
<link rel="stylesheet" type="text/css" href="~/Content/ValidationStyle.css"/>
<link rel="stylesheet" type="text/css" href="~/Content/EditProfile.css" />
<script src="~/Scripts/ShowProductsByFilter.js" type="text/javascript"></script>
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<div id="showProduct">
    @using (Html.BeginForm("SignUp", "Auth",new { returnUrl = ViewBag.returnUrl }, FormMethod.Post,new {  enctype="multipart/form-data" }))
    {
        <p>User name:</p>
        @Html.TextBoxFor(x => x.UserName, new { Class = "EnterProductInfoField" })
        <p style="color:red;display:inline">*</p>
        @Html.ValidationMessageFor(x => x.UserName)     
        <p>Email:</p>
        @Html.EditorFor(x => x.EmailAdress, new { Class = "EnterProductInfoField", @type = "email" })
        <p style="color:red;display:inline">*</p>
        @Html.ValidationMessageFor(x => x.EmailAdress)      
        <p>Password:</p>
        @Html.PasswordFor(x => x.Password, new { Class = "EnterProductInfoField" })
        <p style="color:red;display:inline">*</p>
        @Html.ValidationMessageFor(x => x.Password)
        <p>First name:</p>
        @Html.TextBoxFor(x => x.FirstName, new { Class = "EnterProductInfoField" })
        <p>Second name:</p>
        @Html.TextBoxFor(x => x.SecondName, new { Class = "EnterProductInfoField" })      
        <p>Age:</p>
        @Html.TextBoxFor(x => x.Age, new { Class = "EnterProductInfoField" ,@type = "number" })      
        <p>Country:</p>
        @Html.TextBoxFor(x => x.Country, new { Class = "EnterProductInfoField" })     
        <p>Phone number:</p>
        @Html.TextBoxFor(x => x.PhoneNumber, new { Class = "EnterProductInfoField" })
        <p>Upload your photo:</p>
         <input type="file" name="uploadedImage" />
        <br />
        <br />
        <input type="submit" value="Register" class="DataOperations" style="left:0px" />
    }
</div>
