
    @using OnlineShop.Models;
@{ 
    IEnumerable<SubCategory> subCatList= (IEnumerable<SubCategory>)ViewData["SubCategories"];
    IEnumerable<Category> catList = (IEnumerable<Category>)ViewData["Categories"];
}
<link rel="stylesheet" type="text/css" href="~/Content/ValidationStyle.css"/>
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-3.1.0.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.11.4.min.js")' type="text/javascript"></script>
<script src="~/Scripts/AddRemoveProductDialog.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script src="~/Scripts/FillSubCategory.js" type="text/javascript"></script>
@model OnlineShop.Models.Product
    <div>
     
    @using (Ajax.BeginForm("AddProducts", "Home",new AjaxOptions{UpdateTargetId= "showProduct" }, new { id = "valForm", enctype = "multipart/form-data" }))
    {
    <p>Name of product:</p>@Html.TextBoxFor(x => x.Name,new {Class="EnterProductInfoField" });
        @Html.ValidationMessageFor(x=>x.Name);
    <p>Article of product:</p>@Html.TextBoxFor(x => x.Article, new { Class = "EnterProductInfoField" });
        @Html.ValidationMessageFor(x => x.Article);
    <p>Price:</p>@Html.TextBoxFor(x => x.Price, new { Class = "EnterProductInfoField" });
        @Html.ValidationMessageFor(x => x.Price);
        <p>Category:</p>
        @Html.DropDownList("Category", new SelectList(catList, "Id", "category"), "Select category");
        <p>SubCategory:</p> 
        @Html.DropDownListFor(x=>x.selectedSub, new SelectList(string.Empty, "Id", "Subcategory"), "Select sub category",new {id="subCategory" });
        @Html.ValidationMessageFor(x => x.SubCategory);
        <p>Upload picture:</p>
        <input type="file" name="uploadedImage" />
        <p>Description:</p>@Html.TextAreaFor(x => x.Description,new {style= "height:100px;width:180px" });
        @Html.ValidationMessageFor(x => x.Description);
        <br/>
        <br />
     <input id="submitValidation" type="submit" value="Add"/>
}
</div>
